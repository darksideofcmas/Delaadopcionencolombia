    <script>
        const timelineData = [
            { year: "1887", law: "Código Civil", desc: "Visión patrimonialista de Andrés Bello. La adopción como prohijamiento con fines sucesorales.", hito: "Hito: El niño como objeto de herencia", icon: "fa-book-scale" },
            { year: "1960", law: "Ley 140", desc: "Se introduce la intervención judicial y el registro notarial obligatorio para dar validez al acto civil.", hito: "Hito: Primer control estatal", icon: "fa-gavel" },
            { year: "1975", law: "Ley 5", desc: "Nace la diferenciación entre adopción simple y plena. Se permite la ruptura total con la familia biológica.", hito: "Hito: Ruptura del vínculo de sangre", icon: "fa-users-slash" },
            { year: "1989", law: "Decreto 2737", desc: "Código del Menor. La adopción se define oficialmente como una medida de protección estatal prioritaria.", hito: "Hito: De contrato a protección", icon: "fa-shield-halved" },
            { year: "2006", law: "Ley 1098", desc: "Código de Infancia. Consagra la Doctrina de Protección Integral. La adopción es única e irrevocable.", hito: "Hito: Protección Integral Universal", icon: "fa-scroll" },
            { year: "2024", law: "Ley 2388 y Jurisprudencia", desc: "Reconocimiento de la familia de crianza y adopción diversa. El afecto prevalece sobre la genética.", hito: "Hito: El afecto como fuente de derecho", icon: "fa-heart-circle-check" }
        ];

        const slider = document.getElementById('sliderTimeline');
        const progress = document.getElementById('timelineProgress');
        const dots = document.querySelectorAll('.dot');
        
        const tLaw = document.getElementById('timelineLaw');
        const tDesc = document.getElementById('timelineDesc');
        const tHito = document.getElementById('timelineHito');
        const tIcon = document.getElementById('timelineIcon');
        const tCard = document.getElementById('timelineCard');

        slider.addEventListener('input', function() {
            const val = parseInt(this.value);
            const percentage = (val / 5) * 100;
            
            // Actualizar progreso visual
            progress.style.width = percentage + '%';
            
            // Actualizar dots
            dots.forEach((dot, index) => {
                if(index <= val) dot.classList.add('active');
                else dot.classList.remove('active');
            });
            
            // Actualizar Contenido con animación de entrada
            const data = timelineData[val];
            
            tCard.style.opacity = "0";
            tCard.style.transform = "translateX(20px)";
            
            setTimeout(() => {
                tLaw.innerText = data.law;
                tDesc.innerText = data.desc;
                tHito.innerText = data.hito;
                tIcon.className = "fa-solid " + data.icon;
                
                tCard.style.opacity = "1";
                tCard.style.transform = "translateX(0)";
            }, 200);
        });
    </script>
